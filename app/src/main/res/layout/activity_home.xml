<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bluebulls.apps.whatsapputility.activities.HomeActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:id="@+id/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_below="@+id/appBar"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:id="@+id/viewCard">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
    </android.support.v7.widget.CardView>


        <devlight.io.library.ntb.NavigationTabBar
            android:id="@+id/navigation"
            android:elevation="50dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:ntb_active_color="#ffffff"
            app:ntb_animation_duration="400"
            app:ntb_badge_bg_color="#ffff0000"
            android:layout_alignParentBottom="true"
            app:ntb_badge_gravity="top"
            app:ntb_badge_position="right"
            app:ntb_badge_size="12dp"
            app:ntb_badge_title_color="#28d731"
            app:ntb_badge_use_typeface="false"
            app:ntb_badged="true"
            app:ntb_bg_color="#faf9f9"
            app:ntb_icon_size_fraction="0.5"
            app:ntb_inactive_color="#979696"
            app:ntb_scaled="true"
            app:ntb_swiped="true"
            app:ntb_tinted="true"
            app:ntb_title_mode="all"
            app:ntb_title_size="12dp"
            app:ntb_titled="true" />
</RelativeLayout>
