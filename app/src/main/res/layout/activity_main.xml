<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bluebulls.apps.whatsapputility.activities.MainActivity">
    <TextView
        android:layout_above="@+id/image"
        android:layout_marginBottom="50dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Just One More Step\nAllow these permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/mobile"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/la"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications     "
            android:id="@+id/notifyTxt"
            android:textSize="25dp"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/notifications"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/la"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draw Overlay    "
            android:textSize="25dp"
            android:id="@+id/overlayTxt"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/drawOverlay"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lc"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lb"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usage Access  "
            android:id="@+id/uaText"
            android:textSize="25dp"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/ua"
            />
    </LinearLayout>
</RelativeLayout>
