<?xml version="1.0" encoding="utf-8"?>
<com.bluebulls.apps.whatsapputility.util.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/edge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/poll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/color_layout_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/color_layout_background"
                    android:src="@drawable/ic_assessment_black_48dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Poll"
                    android:textAlignment="center"
                    android:textColor="#282727"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/color_layout_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/color_layout_background"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_event_black_48dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event"
                    android:textAlignment="center"
                    android:textColor="#282727"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_layout_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_layout_background"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_alarm_add_black_48dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder"
                    android:textAlignment="center"
                    android:textColor="#282727"
                    android:textSize="17dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/color_layout_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/color_layout_background"
                    android:src="@drawable/ic_search_black_48dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textAlignment="center"
                    android:textColor="#282727"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Wish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@color/color_layout_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/color_layout_background"
                    android:src="@drawable/ic_card_giftcard_black_48dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wish"
                    android:textAlignment="center"
                    android:textColor="#282727"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/screenshot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_layout_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_layout_background"
                    android:src="@drawable/ic_photo_camera_black_48dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="ScreenShot"
                    android:textAlignment="center"
                    android:textColor="#282727"
                    android:textSize="17dp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</com.bluebulls.apps.whatsapputility.util.CustomLayout>