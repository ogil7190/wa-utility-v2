<?xml version="1.0" encoding="utf-8"?>
<com.bluebulls.apps.whatsapputility.util.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_layout_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/color_layout_background">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/action_pol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_defaultColor="@color/colorPrimaryDark"
            fancy:fb_focusColor="#313131"
            fancy:fb_iconPosition="right"
            fancy:fb_iconResource="@drawable/ic_assessment_white_24dp"
            fancy:fb_radius="5dp"
            fancy:fb_iconPaddingRight = "25dp"
            fancy:fb_text="Poll              "
            fancy:fb_textSize="28dp"></mehdi.sakout.fancybuttons.FancyButton>

        <TextView
            android:id="@+id/option_noti_poll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="9+"
            android:visibility="gone"
            android:paddingRight="1dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_layout_background"
        android:elevation="5dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/action_eve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_defaultColor="@color/colorPrimaryDark"
            fancy:fb_focusColor="#313131"
            fancy:fb_iconPaddingRight = "25dp"
            fancy:fb_iconResource="@drawable/ic_create_white_24dp"
            fancy:fb_radius="5dp"
            fancy:fb_iconPosition="right"
            fancy:fb_text="Event          "
            fancy:fb_textSize="28dp"></mehdi.sakout.fancybuttons.FancyButton>
        <TextView
            android:id="@+id/option_noti_eve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:text="2"
            android:paddingRight="1dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_layout_background"
        android:elevation="5dp"
        >
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/action_rem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_defaultColor="@color/colorPrimaryDark"
            fancy:fb_focusColor="#313131"
            fancy:fb_iconResource="@drawable/ic_access_alarms_white_24dp"
            fancy:fb_radius="5dp"
            fancy:fb_iconPaddingRight = "25dp"
            fancy:fb_iconPosition="right"
            fancy:fb_text="Reminder   "
            fancy:fb_textSize="28dp"></mehdi.sakout.fancybuttons.FancyButton>
        <TextView
            android:id="@+id/option_noti_rem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:visibility="gone"
            android:paddingRight="1dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:cardBackgroundColor="@color/color_layout_background"
        android:elevation="5dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/action_ss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:fb_defaultColor="@color/colorPrimaryDark"
            fancy:fb_focusColor="#313131"
            fancy:fb_iconResource="@drawable/ic_photo_camera_white_24dp"
            fancy:fb_radius="5dp"
            fancy:fb_iconPosition="right"
            fancy:fb_iconPaddingRight = "25dp"
            fancy:fb_text="ScreenShot"
            fancy:fb_textSize="28dp"></mehdi.sakout.fancybuttons.FancyButton>

        <TextView
            android:id="@+id/option_noti_ss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="8+"
            android:paddingRight="1dp"
            android:visibility="gone"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />
    </android.support.v7.widget.CardView>
</com.bluebulls.apps.whatsapputility.util.CustomLayout>