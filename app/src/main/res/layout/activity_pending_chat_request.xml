<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bluebulls.apps.whatsapputility.activities.PendingChatRequest">

    <TextView
        android:text="You have new Chat Request from OgilX You can join"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/accept"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Accept"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accept"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="Reject"
        android:background="#ff6c09"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reject"
        android:layout_below="@+id/accept"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
