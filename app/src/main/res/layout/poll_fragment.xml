<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/refresh_tag"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Refreshing Polls"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />
    <com.twotoasters.jazzylistview.JazzyListView
        android:id="@+id/list_view"
        android:layout_below="@+id/refresh_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.twotoasters.jazzylistview.JazzyListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyPollText"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Polls"/>
    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/polebtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:elevation="5dp"
        app:sparkbutton_activeImage="@drawable/icon"
        app:sparkbutton_inActiveImage="@drawable/icon"
        app:sparkbutton_iconSize="50dp"
        app:sparkbutton_primaryColor="@color/colorAccent"
        app:sparkbutton_secondaryColor="@color/colorPrimaryDark">
    </com.varunest.sparkbutton.SparkButton>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chathead_img_main"
        android:layout_width="50dp"
        android:background="#00ffffff"
        app:cpv_color="#075e54"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:cpv_thickness="2dp"
        android:elevation="5dp"
        android:layout_height="50dp"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true" />
</RelativeLayout>